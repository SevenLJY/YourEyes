<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/bg_login"
        android:scaleType="fitXY"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:alpha="0.9"
        android:background="@color/bg_middle">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/et_username"
            android:hint="@string/et_username"
            android:gravity="center"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@id/et_password"
            android:hint="@string/et_password"
            android:gravity="center"
            android:inputType="textPassword"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_newPassword"
            android:hint="@string/et_newPassword"
            android:gravity="center"
            android:inputType="textPassword"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_confpassword"
            android:hint="@string/et_confPassword"
            android:gravity="center"
            android:inputType="textPassword"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/btn_modifyPassword"
            android:text="@string/modifyPassword"
            android:background="@color/bigButton"/>
    </LinearLayout>
</FrameLayout>